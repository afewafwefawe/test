<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/backgroundgrey"
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:background="@color/backgroundcolor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:orientation="horizontal" >
            <TextView 
            android:layout_marginRight="120dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:text="资源"
            />
        <Button
            android:padding="6dp"
            android:layout_margin="5dp"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/menu_bar" />

    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundblack">
    </LinearLayout>
    <LinearLayout 
       android:background="@color/backgroundgrey"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:orientation="horizontal"
        >
        <EditText 
            android:background="@drawable/resource_searcb_edittext"
            style="@style/AppBaseTheme"
      		android:layout_marginTop="4dp"
    	    android:layout_marginLeft="10dp"
            android:hint="@string/resource_search_string"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginBottom="4dp"
            />
        <Button 
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/resource_search_button"
            android:background="@drawable/resource_searcb_button"
            android:layout_width="52dp"
            android:layout_height="42dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:background="@color/backgroundwhite"
        ></LinearLayout>
    <LinearLayout 
        android:layout_margin="2dp"
        android:background="@drawable/fragment_shape"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        ></LinearLayout>
</LinearLayout>
